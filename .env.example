# ============================================
# DATABASE CONFIGURATION
# ============================================
# Для Docker Compose используйте имя сервиса "postgres"
# Для production измените пароль!
DATABASE_URL="postgresql://postgres:your_secure_password@postgres:5432/wa_manager?schema=public"
DIRECT_URL="postgresql://postgres:your_secure_password@postgres:5432/wa_manager?schema=public"

# ============================================
# NEXT.JS CONFIGURATION
# ============================================
# Замените на ваш домен или IP адрес сервера
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com

# ============================================
# API CONFIGURATION
# ============================================
API_PORT=5001

# ============================================
# SECURITY
# ============================================
# ВАЖНО: Сгенерируйте случайный ключ для production!
# Можно использовать: openssl rand -base64 32
API_SECRET_KEY=your-super-secret-key-change-this-in-production

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=production
